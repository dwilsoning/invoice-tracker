{
  "name": "invoice-tracker-backend",
  "version": "1.0.0",
  "description": "Backend API for Invoice Tracker",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:postgres": "node server-postgres.js",
    "dev": "nodemon server.js",
    "dev:postgres": "nodemon server-postgres.js",
    "migrate": "echo '⚠️  Migration is DISABLED. To enable, rename migrate-to-postgres.DISABLED.js to migrate-to-postgres.js' && exit 1",
    "setup:postgres": "node setup-postgres.js",
    "backup": "node scripts/backup/backup-postgres.js",
    "backup:list": "node scripts/backup/backup-postgres.js list",
    "test": "node ./node_modules/jest/bin/jest.js --forceExit",
    "test:watch": "node ./node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node ./node_modules/jest/bin/jest.js --coverage --forceExit",
    "test:api": "node ./node_modules/jest/bin/jest.js tests/api.test.js --forceExit",
    "test:unit": "node ./node_modules/jest/bin/jest.js tests/unit",
    "test:integration": "node ./node_modules/jest/bin/jest.js tests/integration --forceExit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "formidable": "^3.5.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "sql.js": "^1.13.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  }
}
